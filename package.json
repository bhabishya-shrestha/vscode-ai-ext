{
  "name": "stella-ext",
  "displayName": "stella-ext",
  "description": "an AI-powered VS Code assistant named Stella",
  "repository": {
    "type": "git",
    "url": "https://github.com/bhabishya-shrestha/vscode-ai-ext"
  },
  "version": "1.1.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:stella-ext.clearHistory",
    "onCommand:stella-ext.generateProject"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "stella-ext.startStella",
        "title": "Start Stella"
      },
      {
        "command": "stella-ext.toggleHideThinking",
        "title": "Toggle Hide Thinking Portion"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "stella-sidebar",
          "title": "Stella",
          "icon": "media/stella.svg"
        }
      ]
    },
    "views": {
      "stella-sidebar": [
        {
          "id": "stellaView",
          "name": "Tea Party Room",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Stella",
      "properties": {
        "stella.model": {
          "type": "string",
          "default": "deepseek-r1:32b",
          "description": "Default Ollama model to use"
        },
        "stella.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama server URL"
        },
        "stella.hideThinking": {
          "type": "boolean",
          "default": true,
          "description": "When enabled, a separate thinking indicator is shown immediately above the final answer."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "ollama": "^0.5.12"
  }
}
